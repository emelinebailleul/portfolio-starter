<section class="project-header" data-animate-auto>
  <h2 class="project-number"><%= project.number %></h2>
  <h1 class="project-name"><%= project.name %></h1>

  <section class="main-infos"  data-animate-auto>
    <aside>
      <h3 class="small-title">Role</h3>
      <p><%= project[locale.to_s].role %></p>
      <% if project.team == "" %>
      <% else %>
        <h3 class="small-title"><%= t('projects.labelTeam') %></h3>
        <p><%= project.team %></p>
      <% end %>
      <h3 class="small-title"><%= t('projects.labelUrl') %></h3>
      <% if project.url == "offline" %>
        <p class="offline">offline</p>
      <% else %>
        <a href="<%= project.url %>"><%= project.url %></a>
      <% end %>
    </aside>

    <article class="project-desc">
      <p><%= project[locale.to_s].description %></p>
    </article>
  </section>


</section>
