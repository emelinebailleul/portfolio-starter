<section class="project-header" data-animate-auto>
  <h2 class="project-number"><%= project.number %></h2>
  <h1 class="project-name"><%= project.name %></h1>

  <section class="main-infos"  data-animate-auto>
    <aside>
      <h3 class="small-title"><%= t('projects.titleConcept') %></h3>
      <p><%= project[locale.to_s].role %></p>
      <h3 class="small-title"><%= t('projects.titleTeam') %></h3>
      <p><%= project.team %></p>
      <h3 class="small-title"><%= t('projects.titleProblem') %></h3>
      <p><%= project.problem %></p>

    </aside>

    <article class="project-desc">
      <p><%= project[locale.to_s].concept %></p>
    </article>
  </section>


</section>
